<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="et_input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:padding">@dimen/et_padding</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="btn_move_to_next_screen">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginTop">@dimen/btn_margin_top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tv_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/et_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tv_item_ts</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_empty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>