<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <EditText
        android:id="@+id/et_input_text"
        style="@style/et_input_text"
        android:hint="@string/input_text"
        android:importantForAutofill="no" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_second_activity"
        style="@style/btn_move_to_next_screen"
        android:text="@string/move_to_second_screen" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_rv_activity"
        style="@style/btn_move_to_next_screen"
        android:text="@string/list_of_all_texts"
        />

</LinearLayout>